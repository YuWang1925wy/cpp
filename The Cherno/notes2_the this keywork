#include <iostream>
#include <string>

class Entity
{
    public:
        int x, y;
        // Entity(int x, int y) : x(x), y(y) {}
        Entity(int x, int y)
        {
            this->x = x;
            (*this).y = y; // "this" is a pointer
        }
        
};

int main()
{
    Entity e(1, 2);
    std::cout << e.x << "," << e.y << std::endl;
    std::cin.get();
}